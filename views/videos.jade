extends layout

block content
  div(class='group container')
    nav
      ul
        li
          a(href='/') Home
    h1 Videos for #{videos[0].course_name}
    h2 no particular order
    -for video in videos
      div(class='video')
        section(class='subtleShadow')
          a(href="//youtube.com/watch?v=#{video.video_id}" data-id=video.video_id)
            span(class='videoInject')
              img(src="//img.youtube.com/vi/#{video.video_id}/0.jpg")
            section Posted by #{video.poster.name} #{video.upload_time}

  script(src='/javascripts/videosInject.js' type='text/javascript')
